[bar/top]
monitor = ${env:PRIMARY_DISPLAY}
width = 100%
height = 20
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}

; Under-/overline pixel size
